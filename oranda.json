{
  "build": {
    "static_dir": "assets"
  },
  "styles": {
    "theme": "axolight",
    "favicon": "./assets/favicon.ico"
  },
  "components": {
    "mdbook": {
      "path": "./book"
    },
    "artifacts": {
      "package_managers": {
        "preferred": {
          "npm": "npm install -g sealedinfra",
          "npx": "npx si -h",
          "crates.io": "cargo install sealedinfra",
          "homebrew": "brew install sealedinfra"
        }
      }
    }
  }
}